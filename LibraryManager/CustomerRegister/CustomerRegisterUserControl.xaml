<UserControl x:Class="LibraryManager.CustomerRegister.CustomerRegisterUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryManager.CustomerRegister"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
              DataContext="{Binding Source={StaticResource Locator}, Path=Register}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button x:Name="signBtn" Content="Sign Up" Grid.Row="0" Background="White" FontStyle="Italic" FontSize="18" FontWeight="Bold" Height="50" Width="140" Command="{Binding RegisterCustomer}"></Button>
        <Button x:Name="loginBtn" Content="Login" Grid.Column="1" Background="White" FontStyle="Italic" FontSize="18" FontWeight="Bold" Height="50" Width="140" Command="{Binding LoginCustomer}"></Button>


    </Grid>
</UserControl>
