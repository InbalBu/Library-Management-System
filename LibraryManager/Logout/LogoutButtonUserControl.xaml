<UserControl x:Class="LibraryManager.Logout.LogoutButtonUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryManager.Logout"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding Source={StaticResource Locator}, Path=Register}">
    <Grid>
        <Button x:Name="logout" Content="Log out" Grid.Row="0" FontSize="18" Background="White" FontStyle="Italic"  FontWeight="Bold" Height="50" Width="140" Command="{Binding LogOutWorker}"></Button>

    </Grid>
</UserControl>
