<UserControl x:Class="LibraryManager.Display.DisplayListViewUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryManager.Display"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding Source={StaticResource Locator}, Path=Buttons}">
    <Grid>
        <ItemsControl ItemsSource="{Binding ObservableLibraryItems}" HorizontalContentAlignment="Center" Background="Transparent" ></ItemsControl>
    </Grid>
</UserControl>
